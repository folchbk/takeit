{% extends 'base-backoffice.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="content-wrapper">
            <section class="content col-md-12 col-lg-7" style="float:none; margin: 0 auto;">
                <h3 class="box-title">{{ category_product.name }}</h3>
                <div class="box box-primary">
                    <div class="box-body no-padding">
                        <table class="table table-striped">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ category_product.id }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ category_product.name }}</td>
                            </tr>
                            <tr>
                                <th>ShownOrder</th>
                                <td>{{ category_product.shownOrder }}</td>
                            </tr>
                            <tr>
                                <th>Subcategories</th>
                                <td>
                                    {% for subcategory in category_product.subcategories %}
                                        <li>{{ subcategory.name }}</li>
                                    {% endfor %}
                                </td>
                            </tr>

                            </tbody>
                        </table>

                        <div class="buttons">
                            <a role="button" class="btn btn-success"
                               href="{{ path('category_product_edit', {'id': category_product.id}) }}">Edit</a>
                            <a role="button">{{ include('category_product/_delete_form.html.twig') }}</a>
                            <a role="button" class="btn btn-info" href="{{ path('category_product_index') }}">Back to list</a>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

{% endblock %}
