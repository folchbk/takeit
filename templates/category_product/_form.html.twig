<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">{{ category_product.name|default('New category') }}</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    {{ form_start(form) }}
    <div class="box-body">
        <div class="form-group">
            <label>Category name</label>
            {{ form_widget(form.name, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter category name',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.name) }}
            </div>
        </div>
        <div class="form-group">
            <label>Priority</label>
            {{ form_widget(form.shownOrder, {'attr': {
                'class': 'form-control'
            }}) }}
            <div class="form-error">
                {{ form_errors(form.shownOrder) }}
            </div>
        </div>
        <div class="form-group" style="background: #FDEBD0; padding: 15px;">
            <div class="row js-category-product-wrapper"
                 data-prototype="{{ form_widget(form.subCategories.vars.prototype)|e('html_attr') }}"
                 data-index="{{ form.subCategories|length }}">
            </div>

            <div class='js-category-product-wrapper'><a href='#' class='js-category-product-add' style="padding: 25px"><span class='fa fa-plus-circle'></span>Add</a></div>
            {% for subCategory in form.subCategories %}
                <div class="col-xs-4 js-product-ingredient-item form-group" style="padding: 25px">
                    <a href="#" class="js-remove-ingredient pull-right">
                        <span class="fa fa-close"></span>
                    </a>
                    {{ form_widget(subCategory.name, {'attr': {
                        'class': 'form-control'
                    }}) }}
                    {{ form_widget(subCategory.shownOrder, {'attr': {
                        'class': 'form-control'
                    }}) }}
                    {{ form_errors(subCategory) }}
                </div>
            {% endfor %}
        </div>
    </div>
    <!-- /.box-body -->

    <div class="box-footer">
        <div style="float:right;">
            <a class="btn btn-danger" role="button" href="{{ path('category_product_index') }}">Back to list</a>
            <button type="submit" class="btn btn-success">{{ button_label|default('Save') }}</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>