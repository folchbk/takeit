{% extends 'base-backoffice.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="content-wrapper">
            <section class="content col-md-12 col-lg-7" style="float:none; margin: 0 auto;">
                <h3 class="box-title">{{ product.name }}</h3>
                <div class="box box-primary">
                    <div class="box-body no-padding">
                        <table class="table table-striped">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ product.id }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ product.name }}</td>
                            </tr>
                            <tr>
                                <th>Price</th>
                                <td>{{ product.price }}</td>
                            </tr>
                            <tr>
                                <th>CreatedAt</th>
                                <td>{{ product.createdAt ? product.createdAt|date('d/m/Y - H:i') : '' }}h</td>
                            </tr>
                            <tr>
                                <th>UpdatedAt</th>
                                <td>{{ product.updatedAt ? product.updatedAt|date('d/m/Y - H:i') : '' }}</td>
                            </tr>
                            <tr>
                                <th>DeletedAt</th>
                                <td>{{ product.deletedAt ? product.deletedAt|date('d/m/Y - H:i') : '' }}</td>
                            </tr>
                            </tbody>
                        </table>

                        <div class="buttons">
                            <a role="button" class="btn btn-success"
                               href="{{ path('product_edit', {'id': product.id}) }}">Edit</a>
                            <a role="button">{{ include('product/_delete_form.html.twig') }}</a>
                            <a role="button" class="btn btn-info" href="{{ path('product_index') }}">Back to list</a>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

{% endblock %}
