<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Edit {{ product.name }}</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    {{ form_start(form) }}
    <div class="box-body">
        <div class="form-group">
            <label>Product name</label>
            {{ form_widget(form.name, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter product name',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.name) }}
            </div>
        </div>
        <div class="form-group">
            <label>Price</label>
            {{ form_widget(form.price, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter product price',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.price) }}
            </div>
        </div>
        <div class="form-group">
            <label>Description</label>
            {{ form_widget(form.description, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter product description',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.description) }}
            </div>
        </div>
        <div class="form-group">
            <label>Category</label>
            {{ form_widget(form.category, {'attr': {
                'class': 'form-control'
            }}) }}
            <div class="form-error">
                {{ form_errors(form.category) }}
            </div>
        </div>
        <div class="form-group">
            <label>Image</label>
            {{ form_widget(form.image, {'attr': {
                'class': 'form-control'
            }}) }}
            <div class="form-error">
                {{ form_errors(form.image) }}
            </div>
        </div>
        <div class="form-group" style="background: #FDEBD0; padding: 15px;">
            <div class="row js-product-ingredient-wrapper"
                 data-prototype="{{ form_widget(form.productIngredients.vars.prototype)|e('html_attr') }}"
                 data-index="{{ form.productIngredients|length }}">
            </div>

            <div class='js-product-ingredient-wrapper'><a href='#' class='js-product-ingredient-add' style="padding: 25px"><span class='fa fa-plus-circle'></span>Add</a></div>
            {% for productIngredient in form.productIngredients %}
                <div class="col-xs-4 js-product-ingredient-item form-group" style="padding: 25px">
                    <a href="#" class="js-remove-ingredient pull-right">
                        <span class="fa fa-close"></span>
                    </a>
                    {{ form_widget(productIngredient.ingredient, {'attr': {
                        'class': 'form-control'
                    }}) }}
                    {{ form_widget(productIngredient.quantity, {'attr': {
                        'class': 'form-control'
                    }}) }}
                    {{ form_errors(productIngredient) }}
                </div>
            {% endfor %}
        </div>
    </div>
    <!-- /.box-body -->

    <div class="box-footer">
        <div style="float:right;">
            <a class="btn btn-danger" role="button" href="{{ path('product_index') }}">Back to list</a>
            <button type="submit" class="btn btn-success">{{ button_label|default('Save') }}</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>