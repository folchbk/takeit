<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Edit {{ product.name }}</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    {{ form_start(form) }}
    <div class="box-body">
        <div class="form-group">
            <label>Product name</label>
            {{ form_widget(form.name, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter product name',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.name) }}
            </div>
        </div>
        <div class="form-group">
            <label>Price</label>
            {{ form_widget(form.price, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter product price',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.price) }}
            </div>
        </div>
        {#<div class="form-group">#}
            {#<label>Product ingredients</label>#}
            {#{{ form_widget(form.productIngredients, {'attr': {#}
                {#'class': 'form-control',#}
            {#}}) }}#}
            {#<div class="form-error">#}
                {#{{ form_errors(form.productIngredients) }}#}
            {#</div>#}
        {#</div>#}

        <div class="category">
            {{ form_row(form.productIngredients) }}
        </div>

    </div>
    <!-- /.box-body -->

    <div class="box-footer">
        <div style="float:right;">
            <a class="btn btn-danger" role="button" href="{{ path('product_index') }}">Back to list</a>
            <button type="submit" class="btn btn-success">{{ button_label|default('Save') }}</button>
        </div>
    </div>
    {{ form_end(form) }}

