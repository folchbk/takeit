<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Edit {{ deal.name }}</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    {{ form_start(form) }}
    <div class="box-body">
        <div class="form-group">
            <label>Business name</label>
            {{ form_widget(form.name, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter business name',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.name) }}
            </div>
        </div>
        <div class="form-group">
            <label>Cif</label>
            {{ form_widget(form.cif, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter business cif',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.cif) }}
            </div>
        </div>
    </div>
    <!-- /.box-body -->

    <div class="box-footer">
        <div style="float:right;">
            <a class="btn btn-danger" role="button" href="{{ path('deal_index') }}">Back to list</a>
            <button type="submit" class="btn btn-success">{{ button_label|default('Save') }}</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>