{% extends 'base-backoffice.html.twig' %}

{% block title %}Business{% endblock %}

{% block body %}
<div class="wrapper">
    <div class="content-wrapper">
        <section class="content col-md-12 col-lg-7" style="float:none; margin: 0 auto;">
            <h3 class="box-title">{{ business.name }}</h3>
            <div class="box box-primary">
                <div class="box-body no-padding">
                    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ business.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ business.name }}</td>
            </tr>
            <tr>
                <th>Cif</th>
                <td>{{ business.cif }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ business.createdAt ? business.createdAt|date('d/m/Y - H:i') : '' }}{{ business.createdAt ? 'h' : 'Never'}}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ business.updatedAt ? business.updatedAt|date('d/m/Y - H:i') : '' }}{{ business.updatedAt ? 'h' : 'Never'}}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ business.enabled ? '<i class="fa fa-circle text-success"></i>' : '<i class="fa fa-circle text-danger"></i>' }}</td>
            </tr>
        </tbody>
                    </table>
                    <div class="buttons">
                        <a role="button" class="btn btn-success"
                           href="{{ path('deal_edit', {'id': business.id}) }}">Edit</a>
                        <a role="button">{{ include('deal/_delete_form.html.twig') }}</a>
                        <a role="button" class="btn btn-info" href="{{ path('deal_index') }}">Back to list</a>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
{% endblock %}
