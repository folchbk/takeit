{% extends 'base.html.twig' %}

{% block title %}Deal{% endblock %}

{% block body %}
    <h1>Deal</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ deal.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ deal.name }}</td>
            </tr>
            <tr>
                <th>Cif</th>
                <td>{{ deal.cif }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ deal.createdAt ? deal.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ deal.updatedAt ? deal.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ deal.deletedAt ? deal.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ deal.enabled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('deal_index') }}">back to list</a>

    <a href="{{ path('deal_edit', {'id': deal.id}) }}">edit</a>

    {{ include('deal/_delete_form.html.twig') }}
{% endblock %}
