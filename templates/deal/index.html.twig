{% extends 'base.html.twig' %}

{% block title %}Deal index{% endblock %}

{% block body %}
    <h1>Deal index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Cif</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>DeletedAt</th>
                <th>Enabled</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for deal in deals %}
            <tr>
                <td>{{ deal.id }}</td>
                <td>{{ deal.name }}</td>
                <td>{{ deal.cif }}</td>
                <td>{{ deal.createdAt ? deal.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ deal.updatedAt ? deal.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ deal.deletedAt ? deal.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ deal.enabled ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('deal_show', {'id': deal.id}) }}">show</a>
                    <a href="{{ path('deal_edit', {'id': deal.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('deal_new') }}">Create new</a>
{% endblock %}
