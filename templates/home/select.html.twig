{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
    <style>
        html, body {
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;

            display: flex;
            background-color: #2C3E50;

        }

        h1 {
            color: #fff;
            text-shadow: 0 0 20px #000;
            font-size: 3em;
        }

        a {
            color: #000;
            padding: 10px;
            text-decoration: none;
        }

        a:hover {
            border-bottom: 1px solid black;
        }

        ul, li {
            text-decoration: none;
            list-style: none;
            display: inline-block;
            color: #000;
            margin-right: 20px;
        }

        .wrapper-center {
            margin: 0 auto;
            margin-top: 25vh;
            text-align: center;
        }

        .wrapper-center .card {
            display: inline-block;
            margin: 50px;
        }
    </style>

    <div class="wrapper-center">

        {% if deal == null %}

            {% for deal in deals %}
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="{{ asset('images/home/negocio.png') }}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ deal.name }}</h5>
                        <div style="text-align: left">
                            <p class="card-text"><b>CIF</b>: {{ deal.cif }}</p>
                            <p class="card-text"><b>Code</b>: {{ deal.id }}</p>
                            <p></p>
                        </div>
                        <a href="/backoffice/active/deal/{{ deal.id }}"
                           class="btn btn-primary">{% trans %}Administrar{% endtrans %}</a>
                    </div>
                </div>

            {% endfor %}

        {% else %}

            {% for local in locals %}
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="{{ asset('images/home/negocio.png') }}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ local.name }}</h5>
                        <div style="text-align: left">
                            <p class="card-text"><b>City</b>: {{ local.city }}</p>
                            <p class="card-text"><b>Code</b>: {{ local.cp }}</p>
                            <p class="card-text"><b>Code</b>: {{ local.phone }}</p>
                            <p></p>
                        </div>
                        <a href="/backoffice/active/local/{{ local.id }}"
                           class="btn btn-primary">{% trans %}Administrar{% endtrans %}</a>
                    </div>
                </div>

            {% endfor %}

        {% endif %}
    </div>

{% endblock %}
