{% extends 'base.html.twig' %}

{% block title %}Table{% endblock %}

{% block body %}
    <h1>Table</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ table.id }}</td>
            </tr>
            <tr>
                <th>TableCode</th>
                <td>{{ table.tableCode }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ table.type }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ table.createdAt ? table.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ table.updatedAt ? table.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ table.deletedAt ? table.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ table.enabled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('table_index') }}">back to list</a>

    <a href="{{ path('table_edit', {'id': table.id}) }}">edit</a>

    {{ include('table/_delete_form.html.twig') }}
{% endblock %}
