<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Edit {{ selected_user.name }}</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    {{ form_start(form) }}
    <div class="box-body">
        <div class="form-group">
            <label>User name</label>
            {{ form_widget(form.name, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter user name',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.name) }}
            </div>
        </div>

        <div class="form-group">
            <label>Username</label>
            {{ form_widget(form.username, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter username',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.username) }}
            </div>
        </div>

        <div class="form-group">
            <label>User email</label>
            {{ form_widget(form.email, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter user email',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.email) }}
            </div>
        </div>

        <div class="form-group">
            <label>Password</label>
            {{ form_widget(form.plainPassword, {'attr': {
                'class': 'form-control',
                'type': 'password',
                'placeholder' : '*****************'
            }}) }}
            <div class="form-error">
                {{ form_errors(form.plainPassword) }}
            </div>
        </div>

        <div class="form-group">
            <label>Locals</label>
            {{ form_widget(form.locals, {'attr': {
                'class': 'form-control',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.locals) }}
            </div>
        </div>

        <div class="form-group">
            <label>Phone</label>
            {{ form_widget(form.phone, {'attr': {
                'class': 'form-control',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.phone) }}
            </div>
        </div>

        <div class="form-group">
            <label>City</label>
            {{ form_widget(form.city, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter user street'
            }}) }}
            <div class="form-error">
                {{ form_errors(form.street) }}
            </div>
        </div>

        <div class="form-group">
            <label>CP</label>
            {{ form_widget(form.cp, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter user cp'
            }}) }}
            <div class="form-error">
                {{ form_errors(form.cp) }}
            </div>
        </div>

        <div class="form-group">
            <label>Street</label>
            {{ form_widget(form.street, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter user street'
            }}) }}
            <div class="form-error">
                {{ form_errors(form.street) }}
            </div>
        </div>

        <div class="form-group">
            <label>Iban</label>
            {{ form_widget(form.iban, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter user IBAN'
            }}) }}
            <div class="form-error">
                {{ form_errors(form.iban) }}
            </div>
        </div>

        <div class="form-group">
            <label>Enabled</label>
            {{ form_widget(form.enabled, {'attr': {
                'class': 'flat-green',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.enabled) }}
            </div>
        </div>
    </div>
    <!-- /.box-body -->

    <div class="box-footer">
        <div style="float:right;">
            <a class="btn btn-danger" role="button" href="{{ path('user_index') }}">Back to list</a>
            <button type="submit" class="btn btn-success">{{ button_label|default('Save') }}</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>