{% extends 'base-backoffice.html.twig' %}

{% block title %}Menu{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="content-wrapper">
            <section class="content col-md-12 col-lg-7" style="float:none; margin: 0 auto;">
                <h3 class="box-title">{{ menu.name }}</h3>
                <div class="box box-primary">
                    <div class="box-body no-padding">
                        <table class="table table-striped">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ menu.id }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ menu.name }}</td>
                            </tr>
                            <tr>
                                <th>Price</th>
                                <td>{{ menu.price }}</td>
                            </tr>
                            <tr>
                                <th>Products</th>
                                <td>
                                    <ul>
                                        {% for menuProduct in menu.menuProducts %}
                                            <li>{{ menuProduct.product.name }}</li>
                                        {% endfor %}
                                    </ul>
                                </td>
                            </tr>

                            </tbody>
                        </table>

                        <div class="buttons">
                            <a role="button" class="btn btn-success"
                               href="{{ path('menu_edit', {'id': menu.id}) }}">Edit</a>
                            <a role="button">{{ include('menu/_delete_form.html.twig') }}</a>
                            <a role="button" class="btn btn-info" href="{{ path('menu_index') }}">Back to list</a>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}
