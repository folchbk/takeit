{% extends 'base-backoffice.html.twig' %}

{% block title %}Invoice{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="content-wrapper">
            <section class="content col-md-12 col-lg-7" style="float:none; margin: 0 auto;">
                <h3 class="box-title">Invoice {{ invoice.id }} # {{ invoice.client.userObject.name }}</h3>
                <div class="box box-primary">
                    <div class="box-body no-padding">
                        <table class="table table-striped">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ invoice.id }}</td>
                            </tr>
                            <tr>
                                <th>CreatedAt</th>
                                <td>{{ invoice.createdAt ? invoice.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>UpdatedAt</th>
                                <td>{{ invoice.updatedAt ? invoice.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th>DeletedAt</th>
                                <td>{{ invoice.deletedAt ? invoice.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            </tbody>
                        </table>

                        <div class="buttons">
                            <a role="button" class="btn btn-success"
                               href="{{ path('invoice_edit', {'id': invoice.id}) }}">Edit</a>
                            <a role="button">{{ include('invoice/_delete_form.html.twig') }}</a>
                            <a role="button" class="btn btn-info" href="{{ path('invoice_index') }}">Back to list</a>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>

{% endblock %}
