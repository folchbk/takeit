{% extends 'base.html.twig' %}

{% block title %}Local{% endblock %}

{% block body %}
    <h1>Local</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ local.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ local.name }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ local.phone }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ local.street }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ local.city }}</td>
            </tr>
            <tr>
                <th>Cp</th>
                <td>{{ local.cp }}</td>
            </tr>
            <tr>
                <th>NumEmployees</th>
                <td>{{ local.numEmployees }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ local.createdAt ? local.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ local.updatedAt ? local.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ local.deletedAt ? local.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ local.enabled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('local_index') }}">back to list</a>

    <a href="{{ path('local_edit', {'id': local.id}) }}">edit</a>

    {{ include('local/_delete_form.html.twig') }}
{% endblock %}
