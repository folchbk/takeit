<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Edit {{ local.name }}</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    {{ form_start(form) }}
    <div class="box-body">
        <div class="form-group">
            <label>Business</label>
            {{ form_widget(form.deal, {'attr': {
                'class': 'form-control'
            }}) }}
            <div class="form-error">
                {{ form_errors(form.deal) }}
            </div>
        </div>

        <div class="form-group">
            <label>Local name</label>
            {{ form_widget(form.name, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter local name',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.name) }}
            </div>
        </div>

        <div class="form-group">
            <label>Local phone</label>
            {{ form_widget(form.phone, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter local phone',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.phone) }}
            </div>
        </div>


        <div class="form-group">
            <label>Local city</label>
            {{ form_widget(form.city, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter local city',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.city) }}
            </div>
        </div>

        <div class="form-group">
            <label>Local street</label>
            {{ form_widget(form.street, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter local street',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.street) }}
            </div>
        </div>

        <div class="form-group">
            <label>Local cp</label>
            {{ form_widget(form.cp, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter local cp',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.cp) }}
            </div>
        </div>

        <div class="form-group">
            <label>Number of Employees</label>
            {{ form_widget(form.numEmployees, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter local number of employees',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.numEmployees) }}
            </div>
        </div>

        <div class="form-group">
            <label>Enabled</label>
            {{ form_widget(form.enabled, {'attr': {
            }}) }}
            <div class="form-error">
                {{ form_errors(form.enabled) }}
            </div>
        </div>
    </div>
    <!-- /.box-body -->

    <div class="box-footer">
        <div style="float:right;">
            <a class="btn btn-danger" role="button" href="{{ path('local_index') }}">Back to list</a>
            <button type="submit" class="btn btn-success">{{ button_label|default('Save') }}</button>
        </div>
    </div>
    {{ form_end(form) }}

</div>