<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Edit {{ client.userObject.name|default(' ') }}</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    {{ form_start(form) }}
    <div class="box-body">
        <div class="form-group">
            <label>User</label>
            {{ form_widget(form.userObject, {'attr': {
                'class': 'form-control'
            }}) }}
            <div class="form-error">
                {{ form_errors(form.userObject) }}
            </div>
        </div>

        <div class="form-group">
            <label>Table</label>
            {{ form_widget(form.tableObject, {'attr': {
                'class': 'form-control'
            }}) }}
            <div class="form-error">
                {{ form_errors(form.tableObject) }}
            </div>
        </div>

        <div class="form-group">
            <label>CheckIn</label>
            {{ form_widget(form.createdAt, {'attr': {
                'class': 'form-control item'
            }}) }}
            <div class="form-error">
                {{ form_errors(form.createdAt) }}
            </div>
        </div>

        <div class="form-group">
            <label>CheckOut</label>
            {{ form_widget(form.deletedAt, {'attr': {
                'class': 'form-control'
            }}) }}
            <div class="form-error">
                {{ form_errors(form.createdAt) }}
            </div>
        </div>

        <div class="form-group">
            <label>LastOrder</label>
            {{ form_widget(form.updatedAt, {'attr': {
                'class': 'form-control'
            }}) }}
            <div class="form-error">
                {{ form_errors(form.updatedAt) }}
            </div>
        </div>
    </div>
    <!-- /.box-body -->

    <div class="box-footer">
        <div style="float:right;">
            <a class="btn btn-danger" role="button" href="{{ path('client_index') }}">Back to list</a>
            <button type="submit" class="btn btn-success">{{ button_label|default('Save') }}</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>