{% extends 'base-backoffice.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="content-wrapper">
            <section class="content col-md-12 col-lg-7" style="float:none; margin: 0 auto;">
                <h3 class="box-title">Client {{ client.userObject.name }}</h3>
                <div class="box box-primary">
                    <div class="box-body no-padding">
                        <table class="table table-striped">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ client.id }}</td>
                            </tr>
                            <tr>
                                <th>CreatedAt</th>
                                <td>{{ client.createdAt ? client.createdAt|date('d/m/Y - H:i') : '' }}{{ client.createdAt ? 'h' : 'Never'}}</td>
                            </tr>
                            <tr>
                                <th>UpdatedAt</th>
                                <td>{{ client.updatedAt ? client.updatedAt|date('d/m/Y - H:i') : '' }}{{ client.updatedAt ? 'h' : 'Never'}}</td>
                            </tr>
                            </tbody>
                        </table>
                        <div class="buttons">
                            <a role="button" class="btn btn-success"
                               href="{{ path('client_edit', {'id': client.id}) }}">edit</a>
                            <a role="button">{{ include('client/_delete_form.html.twig') }}</a>
                            <a role="button" class="btn btn-info" href="{{ path('client_index') }}">back to list</a>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}