{% extends 'base-backoffice.html.twig' %}

{% block title %}Ingredient{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="content-wrapper">
            <section class="content col-md-12 col-lg-7" style="float:none; margin: 0 auto;">
                <h3 class="box-title">{{ ingredient.name }}</h3>
                <div class="box box-primary">
                    <div class="box-body no-padding">
                        <table class="table table-striped">
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ ingredient.id }}</td>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <td>{{ ingredient.name }}</td>
                            </tr>
                            <tr>
                                <th>Kcal</th>
                                <td>{{ ingredient.kcal }}</td>
                            </tr>
                            <tr>
                                <th>Proteins</th>
                                <td>{{ ingredient.proteins }}</td>
                            </tr>
                            <tr>
                                <th>Carbohydrates</th>
                                <td>{{ ingredient.carbohydrates }}</td>
                            </tr>
                            <tr>
                                <th>Fat</th>
                                <td>{{ ingredient.fat }}</td>
                            </tr>
                            <tr>
                                <th>Stock</th>
                                <td>{{ ingredient.stock }}</td>
                            </tr>
                            <tr>
                                <th>CreatedAt</th>
                                <td>{{ ingredient.createdAt ? ingredient.createdAt|date('d/m/Y - H:i') : '' }}h</td>
                            </tr>
                            <tr>
                                <th>UpdatedAt</th>
                                <td>{{ ingredient.updatedAt ? ingredient.updatedAt|date('d/m/Y - H:i') : '' }}</td>
                            </tr>
                            <tr>
                                <th>DeletedAt</th>
                                <td>{{ ingredient.deletedAt ? ingredient.deletedAt|date('d/m/Y - H:i') : '' }}</td>
                            </tr>
                            </tbody>
                        </table>
                        <div class="buttons">
                            <a role="button" class="btn btn-success"
                               href="{{ path('ingredient_edit', {'id': ingredient.id}) }}">Edit</a>
                            <a role="button">{{ include('ingredient/_delete_form.html.twig') }}</a>
                            <a role="button" class="btn btn-info" href="{{ path('ingredient_index') }}">Back to list</a>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
{% endblock %}
