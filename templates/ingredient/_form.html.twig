<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Edit {{ ingredient.name }}</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    {{ form_start(form) }}
    <div class="box-body">
        <div class="form-group">
            <label>Ingredient name</label>
            {{ form_widget(form.name, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter ingredient name',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.name) }}
            </div>
        </div>
        <div class="form-group">
            <label>Kcal</label>
            {{ form_widget(form.kcal, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter ingredient Kcal',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.kcal) }}
            </div>
        </div>
        <div class="form-group">
            <label>Proteins</label>
            {{ form_widget(form.proteins, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter ingredient proteins',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.proteins) }}
            </div>
        </div>
        <div class="form-group">
            <label>Carbohydrates</label>
            {{ form_widget(form.carbohydrates, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter ingredient carbohydrates',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.carbohydrates) }}
            </div>
        </div>
        <div class="form-group">
            <label>Fat</label>
            {{ form_widget(form.fat, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter ingredient fat',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.fat) }}
            </div>
        </div>
        <div class="form-group">
            <label>Stock</label>
            {{ form_widget(form.stock, {'attr': {
                'class': 'form-control',
                'placeholder': 'Enter ingredient stock',
            }}) }}
            <div class="form-error">
                {{ form_errors(form.stock) }}
            </div>
        </div>
    </div>
    <!-- /.box-body -->

    <div class="box-footer">
        <div style="float:right;">
            <a class="btn btn-danger" role="button" href="{{ path('ingredient_index') }}">Back to list</a>
            <button type="submit" class="btn btn-success">{{ button_label|default('Save') }}</button>
        </div>
    </div>
    {{ form_end(form) }}

</div>